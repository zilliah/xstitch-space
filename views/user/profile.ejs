<%- include('../partials/header') -%>

<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
            <% if (user.designerId) { %>
              <section id="designer">

                <% if (designer.logo) {  %>
                  <img class="avatar"  src="<%= designer.logo %>" alt="Designer's logo">
                <% } %>
                
                <% if (designer.name) {  %>
                <p><strong>Designer Name</strong>: <%= designer.name %></p>
                <% } %>

                <% if (designer.name) {  %>
                <p><strong>Shop<a href="<%= designer.site %>"></a></strong> </p>
                <% } %>

                <% if (designer.bio) {  %>
                <p><strong>Designer Bio</strong>: <%= designer.bio %></p>
                <% } %>
              </section>
            <% } %>




              <% if (user.profilePic) {  %>
                <img class="avatar"  src="<%= user.profilePic %>" alt="User's avatar">
              <% } %>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <% if (user.bio) {  %>
                <p><strong>Bio</strong>: <%= user.bio %></p>
              <% } %>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
              <a href="/user/edit-profile" class="col-3 btn btn-primary">Edit Profile</a>
              <% if (!user.designerId) { %>
                <a href="/designer/edit-profile" class="col-3 btn btn-primary">Add Designer Profile</a>
              <% } %>
              <a href="/project/create" class="col-3 btn btn-primary">Add New Project</a>
          </div>
      </div>
    </div>
    <div class="row">
      <h2>Projects</h2>
      <ul class="project-gallery container">
        <% for (let proj of projects) { %>
          <li class="col-sm"><a href="/project/<%= proj._id %>"><h3><%= proj.title %></h3><img class="img-thumbnail" src="<%= proj.img %>" alt="Project thumbnail"></a></li>
        <% } %>
      </ul>

    </div>

  </div>
</div>

<%- include('../partials/footer') -%>